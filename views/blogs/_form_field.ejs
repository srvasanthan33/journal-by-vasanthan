<div class="form-group mb-4">
    <label for="title">Title</label>
    <input type="text" name="title" id="title" class ="form-control" value="<%= blog.title %>" required>
</div>

<div class="form-group mb-4">
    <label for="category">Category</label>
    <input type ="text" value="<%= blog.category %>" name="category" id ="category" class ="form-control" required>
    
</div>

<div class="form-group mb-4">
    <label for="description">Description</label>
    <textarea  name="description" id ="description" class ="form-control" required>
        <%= blog.description %>
    </textarea>
</div>

<div class="form-group mb-4">
    <label for="markdown">Markdown</label>
    <textarea  name="markdown" id ="description" class ="form-control" required>
        <%= blog.markdown %>
    </textarea>
</div>

<a href="/" class="btn btn-secondary mb-4">Cancel</a>

<button type="submit" class="btn btn-dark mb-4">Save</button>
