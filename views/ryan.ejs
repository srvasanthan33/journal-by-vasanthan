  margin: 0;
  padding: 0;
}

nav a {
  margin-left: 1rem;
  text-decoration: none;
  color: #333;
}

nav a:hover {
  color: #000;
}

main {
  padding: 2rem;
}

section {
  margin-bottom: 2rem;
}

